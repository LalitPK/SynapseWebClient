<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui" 
	xmlns:c="urn:import:com.google.gwt.user.cellview.client"
	xmlns:s="urn:import:org.sagebionetworks.web.client.view">
		
	<ui:style>
		.important {
			font-weight: bold;
		}
		
		.rowTop {
			vertical-align: top;
		}
	</ui:style>
		
	<g:HTMLPanel>

	<!-- start header -->
	<!-- MAIN CONTAINER -->
		<!-- HEADER -->
        <div class="color-line"></div>
        <div class="clear"></div>
    	<div class="container"> 		
			<g:SimplePanel ui:field="header" />
	        	<div class="span-24 notopmargin">	
	<!-- end header -->

					<ul class="breadcrumbs">
						<li class="breadcrumb"><a href="#">Home</a> > Profile</li>
					</ul>
					<g:VerticalPanel width="100%">
						<g:cell horizontalAlignment="ALIGN_RIGHT" width="100%">
							<g:SimplePanel ui:field="editProfileButtonPanel" />
						</g:cell>
						<g:HorizontalPanel>
							<g:VerticalPanel>
								<g:cell verticalAlignment="ALIGN_BOTTOM" horizontalAlignment="ALIGN_CENTER" width="100%">
									<g:SimplePanel ui:field="profilePicturePanel" />
								</g:cell>
								<g:cell verticalAlignment="ALIGN_TOP" horizontalAlignment="ALIGN_CENTER" width="100%">
									<g:SimplePanel ui:field="editPhotoButtonPanel" />
								</g:cell>
							</g:VerticalPanel>
							<g:SimplePanel ui:field="viewProfilePanel" />
						</g:HorizontalPanel>
					</g:VerticalPanel>
					
					<g:VerticalPanel styleName="user-profile-edit-table">
						<g:cell horizontalAlignment="ALIGN_RIGHT">
							<g:SimplePanel ui:field="updateWithLinkedInPanel" />
						</g:cell>
						<g:SimplePanel ui:field="updateUserInfoPanel" />
					</g:VerticalPanel>
					
					<p>&nbsp;</p>					
					
				</div>
					
<!-- start footer -->
            <div class="clear"></div>
        </div> <!-- close class="container" -->
		<g:SimplePanel ui:field="footer" />
<!-- end footer -->

	</g:HTMLPanel>
</ui:UiBinder> 
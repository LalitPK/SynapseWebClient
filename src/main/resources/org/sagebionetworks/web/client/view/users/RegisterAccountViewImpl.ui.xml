<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:c="urn:import:com.google.gwt.user.cellview.client"
	xmlns:s="urn:import:org.sagebionetworks.web.client.view"
	xmlns:b="urn:import:org.gwtbootstrap3.client.ui">

	<g:HTMLPanel>
		<div class="color-line"></div>
		<div class="clear"></div>
		<g:SimplePanel ui:field="header" />
		<div class="separator margin-top-10-imp"></div>
		<div class="container margin-top-15">
			<div class="row">
			    <div class="col-sm-9 col-sm-offset-1">
			        <h2 class="margin-bottom-40">Register with Synapse</h2>
			        <div class="margin-bottom-40" ui:field="contentHtml" />
				    <div ui:field="registrationForm">
				        <form class="form-horizontal" role="form">
							  <div ui:field="emailAddress" class="form-group row">
							    <div class="col-sm-12 margin-bottom-40">
							      <div class="input-group">
										<b:TextBox ui:field="emailAddressField" placeholder="Enter email" />
										<span class="input-group-btn">
											<g:Button ui:field="registerBtn" styleName="btn btn-primary">Register</g:Button>
										</span>
								  </div>
							      <div ui:field="emailAddressError" style="display:none" class="help-block"></div>
							    </div>
							  </div>
						</form>
					</div>
				</div>
			</div>
			<div class="clear"></div>
		</div>
		<g:SimplePanel ui:field="footer" />

	</g:HTMLPanel>
</ui:UiBinder> 
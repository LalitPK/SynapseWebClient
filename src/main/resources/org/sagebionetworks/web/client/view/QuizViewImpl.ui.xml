<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style>
		div.center {   
			margin-left: auto;   
			margin-right: auto;   
			width: 8em;
			padding:15px; 
		}
	</ui:style>
	<g:HTMLPanel>
        <div class="color-line"></div>
        <div class="clear"></div>
		<g:SimplePanel ui:field="header" />
        <div class="separator margin-top-10-imp"></div>
    	<div class="container margin-top-15"> 		
			<g:HTMLPanel ui:field="quizContainer">
				<div class="row">				
					<div class="highlight-box col-md-offset-1 col-md-10 col-sm-offset-1 col-sm-10" title="Quiz">
						<form>
						    <g:FlowPanel ui:field="testContainer">
						    </g:FlowPanel>
		   				</form>
					</div>
					<div class="col-md-offset-1 col-md-10 col-sm-offset-1 col-sm-10">
					    <g:Button ui:field="submitButton" styleName="btn btn-large btn-primary margin-top-10 margin-bottom-40 margin-right-10 right" text="Submit"/>
					</div>
				</div>
			</g:HTMLPanel>
			<g:HTMLPanel ui:field="successContainer">
				<div class="row">
				    <div class="double-border col-md-offset-1 col-md-10 col-sm-offset-1 col-sm-10">
				        <h3 class="center margin-top-100">This qualification is hereby granted to:</h3>
				        <h1 ui:field="userNameCertificate" class="margin-top-30 certificate-cursive-font font-size-90 center"></h1>
				        <h3 class="margin-top-30 center">For passing the Synapse Certification Test</h3>
				        <div class="margin-top-30 margin-bottom-100 center"> <span class="glyphicon glyphicon-certificate font-size-90"></span> </div>
				    </div>
					<div class="col-md-offset-1 col-md-10 col-sm-offset-1 col-sm-10">
					    <g:Button ui:field="continueButton" styleName="btn btn-large btn-primary margin-top-10 margin-bottom-40 margin-right-10 right" text="Continue"/>
					</div>
				</div>
			</g:HTMLPanel>
			
			<g:HTMLPanel ui:field="failureContainer">
				<div class="row">
				    <div class="col-md-offset-1 col-md-10 col-sm-offset-1 col-sm-10">
				        <div class="panel panel-danger">
					      <div class="panel-heading">
							<h3 class="panel-title">Try again</h3>
					      </div>
					      <div class="panel-body">
								<p>All questions must be answered correctly in order to be granted certification.</p>
								<p>Please review the tutorial, and try again.</p>
					      </div>
					    </div>
				    </div>
					<div class="col-md-offset-1 col-md-10 col-sm-offset-1 col-sm-10">
					    <g:Button ui:field="tutorialButton" styleName="btn btn-large btn-primary margin-top-10 margin-bottom-40 margin-right-10 right" text="Back to the Tutorial"/>
					</div>
				</div>
			</g:HTMLPanel>
			
			
		</div> <!-- close class="container" -->
<!-- start footer -->
		<div class="clear"></div>
		<g:SimplePanel ui:field="footer" />
<!-- end footer -->
	</g:HTMLPanel>
</ui:UiBinder> 

<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:c="urn:import:com.google.gwt.user.cellview.client"
	xmlns:b="urn:import:org.gwtbootstrap3.client.ui" xmlns:t="urn:import:org.sagebionetworks.web.client.widget.table.v2"
	xmlns:bg="urn:import:org.gwtbootstrap3.client.ui.gwt" xmlns:bh="urn:import:org.gwtbootstrap3.client.ui.html">
	<g:HTMLPanel>
		<g:HTMLPanel>
			<div class="alert alert-danger">
				Warning: The Table feature is in a test phase.
				<strong>All production data will be DELETED at a future date.</strong>
			</div>
			<!-- This button toggles the visibility of the the column details panel -->
			<b:Button ui:field="columnDetailsToggleButton" icon="TH_LIST"
				dataToggle="COLLAPSE" dataTarget="#editSchemaCollapse">Table
				Schema</b:Button>
			<bh:ClearFix styleName="clearfix margin-top-15" />
			<b:Collapse b:id="editSchemaCollapse" toggle="false">
				<b:Panel>
					<b:PanelBody ui:field="columnDetailsPanel" />
				</b:Panel>
			</b:Collapse>
			
			<b:Alert ui:field="tableMessage" type="INFO"/>

			<b:InputGroup ui:field="queryInputGroup" visible="true">
				<b:TextBox ui:field="queryInput" />
				<b:InputGroupButton>
					<b:Button ui:field="queryButton" icon="SEARCH" type="INFO"
						dataLoadingText="Executing...">Query</b:Button>
				</b:InputGroupButton>
			</b:InputGroup>
			<bh:ClearFix styleName="clearfix margin-top-15" />
			<b:Panel ui:field="queryResultsPanel">
				<b:PanelBody>
					<!-- ToolBar for the table results -->
					<b:ButtonToolBar ui:field="resultsToolBar">
						<b:ButtonGroup>
							<b:Button ui:field="editRowsButton" icon="GEAR" type="INFO"
								dataTarget="#editRowsModal" dataToggle="MODAL">Edit
								Rows</b:Button>
						</b:ButtonGroup>
						<b:ButtonGroup>
							<b:Button ui:field="uploadCSVButton" icon="UPLOAD">Upload</b:Button>
							<b:Button ui:field="downloadCSVButton" icon="DOWNLOAD">Download</b:Button>
						</b:ButtonGroup>
					</b:ButtonToolBar>
					<bh:ClearFix styleName="clearfix margin-top-15" />
					<!-- This table contains the read-only results from a query -->
					<bg:CellTable ui:field="queryResults" bordered="true"
						condensed="true" striped="true" hover="true" />

					<!-- progress bar -->
					<b:Container fluid="true" ui:field="progressContainer" visible="true">
						<b:Row>
							<b:Column size="XS_9" offset="XS_1">
							<bh:Text ui:field="progressText">Executing query...</bh:Text>
							</b:Column>
						</b:Row>
						<b:Row>
							<b:Column size="XS_8" offset="XS_1">
								<b:Progress>
									<b:ProgressBar ui:field="progressBar" type="INFO" percent="20" text="20%" />
								</b:Progress>
							</b:Column>
							<b:Column size="XS_1">
								<b:Button ui:field="progressCancelButton" icon="BAN" type="DANGER" size="SMALL"/>
							</b:Column>
						</b:Row>
					</b:Container>
					<b:Alert ui:field="queryResultAlert" type="DANGER" text="Errors go here">
						
					</b:Alert>
					<!-- This modal dialog will contain the editor for query results -->
					<b:Modal ui:field="editRowsModal" title="Edit Rows"
						closable="true" fade="true" dataBackdrop="STATIC" dataKeyboard="true"
						b:id="editRowsModal" size="LARGE">
						<b:ModalBody>
							<g:SimplePanel ui:field="rowEditorModalPanel" />
							<b:Alert type="DANGER" ui:field="rowEditorAlert" visible="false"
								title="Error" />
						</b:ModalBody>
						<b:ModalFooter>
							<b:Button ui:field="saveRowsButton" type="PRIMARY"
								dataLoadingText="Saving...">Save</b:Button>
							<b:Button ui:field="cancelRowsButton" type="DEFAULT"
								dataDismiss="MODAL">Cancel</b:Button>
						</b:ModalFooter>
					</b:Modal>
				</b:PanelBody>
			</b:Panel>
		</g:HTMLPanel>
	</g:HTMLPanel>
</ui:UiBinder>
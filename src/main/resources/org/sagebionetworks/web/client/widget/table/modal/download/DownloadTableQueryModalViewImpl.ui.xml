<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:c="urn:import:com.google.gwt.user.cellview.client"
	xmlns:b="urn:import:org.gwtbootstrap3.client.ui" xmlns:t="urn:import:org.sagebionetworks.web.client.widget.table.v2"
	xmlns:a="urn:import:org.sagebionetworks.web.client.widget.table.v2"
	xmlns:bg="urn:import:org.gwtbootstrap3.client.ui.gwt" xmlns:bh="urn:import:org.gwtbootstrap3.client.ui.html"
	xmlns:b.select="urn:import:org.gwtbootstrap3.extras.select.client.ui">

	<!-- Dialog for creating a new table -->
	<b:Modal title="Download Query Results to a File" closable="true" fade="true"
		dataBackdrop="STATIC" dataKeyboard="true">
		<b:ModalBody>
			<b:Form>
				<b:FormGroup>
					<b:FormLabel for="fileType">File Type</b:FormLabel>
					<b.select:Select ui:field="fileType" width="100px">
						<b.select:Option>Comma Separated Values (CSV)</b.select:Option>
						<b.select:Option>Tab Separated Values (TSV)</b.select:Option>
					</b.select:Select>
				</b:FormGroup>
				<b:FormGroup>
					<b:CheckBox ui:field="writeHeader">First line is the columns names.</b:CheckBox>
				</b:FormGroup>
				<b:FormGroup>
					<b:CheckBox ui:field="includeMetadata">Include row metadata (Row Id and Row Version).</b:CheckBox>
				</b:FormGroup>
			</b:Form>
			<g:SimplePanel ui:field="trackerPanel" />
			<bh:Div styleName="margin-top-15" />
			<b:Alert ui:field="alert" type="DANGER" visible="false"></b:Alert>
		</b:ModalBody>
		<b:ModalFooter>
			<b:Button ui:field="primaryButton" type="PRIMARY"
				dataLoadingText="Processing...">Download</b:Button>
			<b:Button ui:field="defaultButton" type="DEFAULT"
				dataDismiss="MODAL">Cancel</b:Button>
		</b:ModalFooter>
	</b:Modal>
</ui:UiBinder>
<?xml version="1.0" encoding="UTF-8"?><!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui" 
	xmlns:b="urn:import:org.gwtbootstrap3.client.ui"
	xmlns:bh="urn:import:org.gwtbootstrap3.client.ui.html">
	<b:Modal title="Find Entities"
		closable="true" fade="true" dataBackdrop="STATIC" dataKeyboard="false"
		size="LARGE">
		<b:ModalBody>
			<b:Row>
				<!-- left -->
				<b:Column size="XS_4">
					<b:Panel>
						<b:PanelBody>
							<g:SimplePanel ui:field="browseMyEntitiesContainer" />
							<g:SimplePanel ui:field="searchContainer" />
							<g:SimplePanel ui:field="enterSynapseIdContainer" />
						</b:PanelBody>
					</b:Panel>
				</b:Column>
				<!-- right -->
				<b:Column size="XS_8">
					<!-- right top -->
					<b:Panel>
						<b:PanelBody>
							<g:SimplePanel ui:field="myEntitiesBrowserContainer" />
							<g:SimplePanel ui:field="entitySearchWidgetContainer" />
							<g:SimplePanel ui:field="enterIdWidgetContainer" />
							
							<g:FlowPanel ui:field="versionUI" addStyleNames="margin-top-10">
								<b:Radio ui:field="currentVersionRadio" name="versionRadio" text="Current Version" />
								<b:Radio ui:field="currentVersionRadioShowingVersions"  name="versionRadio" text="Current Version (Always refer to the most current version)" />
								<b:InlineRadio ui:field="specificVersionRadio"  name="versionRadio" text="Refer to a Specific Version" />
								<b:ButtonGroup addStyleNames="margin-left-10">
			                    	<b:Button ui:field="versionDropDownButton" size="SMALL" dataToggle="DROPDOWN" addStyleNames="btn-block"/>
			                    	<b:DropDownMenu ui:field="versionDropDownMenu" addStyleNames="btn-block"/>
			                    </b:ButtonGroup>								
							</g:FlowPanel>

						</b:PanelBody>
					</b:Panel>
					<!-- right bottom -->
					<b:Panel>
						<b:PanelBody>
							<g:HTML ui:field="selectedText"></g:HTML>
						</b:PanelBody>
					</b:Panel>
				</b:Column>
				
			</b:Row>
		</b:ModalBody>
		<b:ModalFooter>
			<b:Button ui:field="cancelButton" type="DEFAULT" dataDismiss="MODAL">Cancel</b:Button>
			<b:Button ui:field="okButton" type="PRIMARY">Select</b:Button>
		</b:ModalFooter>
	</b:Modal>
	
</ui:UiBinder>